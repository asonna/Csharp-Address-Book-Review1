<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Address Book</title>
	</head>
	<body>
    <div class="container">
      <h1>My Address Book</h1><br>
      <p>Here are all the addresses in our book; you can click on the name to select a contact to view on a separate page:</p>
      @foreach(var addressInstance in Model)
      {
        <br>
				<p>
				<a href="/address/selected/?myname=@addressInstance.GetFullName()"><strong>@addressInstance.GetFullName()</strong></a>
				</p>
        <p>HomeAddress: @addressInstance.GetHomeAddress()</p>
        <p>PhoneNumber: @addressInstance.GetPhoneNumber()</p>
				<br><br>
      }
			<div class="row">
				<div class="col-sm-3">
					<form action="/addresses/cleared" method="post">
						<button type="submit">Clear Address Book</button>
					</form>
				</div>
				<div class="col-sm-3">
					<p><a href="/">Add a New Address</a></p><br>
				</div>
			</div>

    </div>
  </body>
</html>
