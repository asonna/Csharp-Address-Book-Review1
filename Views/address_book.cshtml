<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Address Book</title>
	</head>
	<body>
    <div class="container">
      <h1>My Address Book</h1><br>
      <p>Here are all the addresses in our book; you can click on the name to select a contact to remove:</p>
      @foreach(var addressInstance in Model)
      {
        <br>
        <p><a href="/selected_address"><strong>@addressInstance.GetFullName()</strong></a></p>
        <p>HomeAddress: @addressInstance.GetHomeAddress()</p>
        <p>PhoneNumber: @addressInstance.GetPhoneNumber()</p>
      }

      <p><a href="/add_address">Add a New Address</a></p>
      <form action="/cleared_book" method="post">
        <button type="submit">Clear Address Book</button>
      </form>
    </div>
  </body>
</html>
